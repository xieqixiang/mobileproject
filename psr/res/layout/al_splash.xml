<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/math_width_hight"
    android:background="@color/ac_blue"
    tools:context=".ActSplash" >

    <TextView
        android:id="@+id/ai_app_name"
        style="@style/wrap_width_hight"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="38sp" />

    <TextView
        style="@style/wrap_width_hight"
        android:layout_below="@id/ai_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/as_asslogan"
        android:textSize="18sp"
         android:textColor="@android:color/white" />

</RelativeLayout>