<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_normal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ai_psli_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_grey2" />

    <TextView
        android:id="@+id/ai_psli_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ai_psli_trading_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ai_psli_parking_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/parking_space"
        android:contentDescription="@null" />

    <View
        android:id="@+id/ai_psli_view"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/light_grey2" />

    <LinearLayout
        android:id="@+id/ai_psli_buttom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ai_psli_reserve"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/left_shape_selector"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="@string/as_reservate"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey2" />

        <TextView
            android:id="@+id/ai_psli_parking_space_route"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/right_shape_selector"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="@string/as_spacking_spece_route"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey2" />

        <TextView
            android:id="@+id/ai_psli_route"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/right_shape_selector"
            android:contentDescription="@null"
            android:gravity="center"
            android:text="@string/drive_route"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>