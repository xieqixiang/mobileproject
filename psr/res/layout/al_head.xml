<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/head_blue_shape" >

    <Button
        android:id="@+id/ai_head_left"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_light_grey_selector"
        android:contentDescription="@null"
        android:gravity="center"
        android:onClick="controlClick"
        android:text="@string/returnning"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ai_head_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/as_register"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/ai_head_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/dark_grey"
        android:contentDescription="@null"
        android:onClick="controlClick"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ai_head_icon"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ai_head_tv"
        android:background="@drawable/ad_nearby_reserve"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="gone" />

</RelativeLayout>