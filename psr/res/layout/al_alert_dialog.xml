<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="120dp"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ai_alert_title"
        android:layout_width="220dp"
        android:layout_height="35dip"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ai_alert_message"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" >
    </TextView>

    <LinearLayout
        android:layout_width="220dip"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ai_alert_negative"
            android:layout_width="80dp"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/ad_btn_cancel_selected"
            android:onClick="controlClick"
            android:text="@string/cancel"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ai_alert_positive"
            android:layout_width="80dip"
            android:layout_height="35dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ad_selector_bg"
            android:onClick="controlClick"
            android:text="@string/sure"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>