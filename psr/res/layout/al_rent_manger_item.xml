<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ai_rmi_parking_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        
        android:layout_marginRight="2dp" >

        <TextView
            android:id="@+id/ai_rmi_mobile_daily_rent"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/left_shape_selector"
            android:gravity="center"
            android:text="@string/as_modify_daily_rent"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/ai_rmi_mobile_temporary_rent"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/right_shape_selector"
            android:gravity="center"
            android:text="@string/as_modify_temporary_rent"
            android:textColor="@color/dark_grey"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ai_rmi_mobile_parking_space_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
             android:background="@drawable/right_shape_selector"
            android:gravity="center"
            android:text="@string/as_modify_parking_space_info"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>