<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_monitor"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <Button
            android:id="@+id/btn_call_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" 
            
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/call_record"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_message_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/message_record"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sound_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/sound_record"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
             />

        <Button
            android:id="@+id/btn_sound_stop_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/stop_sound_record"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/open_wifi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/open_wifi"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/open_mobile_net"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/open_2g_3g"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/open_mobile_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_light_grey_selector"
                android:gravity="center"
                android:onClick="controlClick"
                android:text="@string/location"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/locaiton_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/network_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/check_network_type"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editor_send_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="left|top"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/send_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_light_grey_selector"
            android:gravity="center"
            android:onClick="controlClick"
            android:text="@string/send_message"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>